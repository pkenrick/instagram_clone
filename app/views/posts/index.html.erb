</head>

<div class="jumbotron">
  <h1>Welcome to Instagram Clone!</h1>
  <p>View posts below or click this button to leave your own.</p>
  <p><a class="btn btn-primary btn-lg" href="/posts/new" role="button">Add Post</a></p>
</div>


<% if @posts.any? %>
  <div id='postList'>
    <% @posts.each do |post| %>
      <div id='postListItem'>
        <div id='post_user_time'><%= post.user.email %>: <%= post.created_at.strftime("%m/%d/%Y") %> <%=post.created_at.strftime("%H:%M") %></div>
        <div id='post_pic'><%= link_to image_tag(post.image.url(:medium)),post_path(post) %></div>
        <div id='post_title'><%= link_to post.title, post_path(post) %></div>
      </div>
    <% end %>
  </div>
<% else %>
  <div id='noPostsMessage'>No posts added yet</div>
<% end %>

